{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/server",
      "envFile": "${workspaceFolder}/.env",
      "args": [],
      "showLog": true,
      "trace": "verbose",
      "logOutput": "rpc"
    },
    {
      "name": "Debug Server (Custom Port)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/server",
      "env": {
        "PORT": "8888",
        "N4S_API_KEY": "4DD7-F8F7-A935-972F-45B4-1A04",
        "ROOLINK_API_KEY": "roo_W97qtymeZZidUNVlQI2dnXdFWWw-ZBj1ks0auTs3D9k",
        "TLS_API_URL": "http://localhost:8080"
      },
      "args": [],
      "showLog": true
    },
    {
      "name": "Debug Current Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "-test.v",
        "-test.run",
        "^${selectedText}$"
      ],
      "showLog": true
    },
    {
      "name": "Debug All Tests",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "-test.v"
      ],
      "showLog": true
    },
    {
      "name": "Attach to Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": 0
    }
  ]
}
